{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "netlify/functions-dist", // Diretório de saída para tudo compilado por este tsconfig
    "rootDir": ".", // Definir rootDir como o diretório raiz do projeto para incluir server/database
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": false,
    "resolveJsonModule": true,
    "sourceMap": true,
    "types": ["node"],
    "baseUrl": ".", // Necessário se usando paths, mas rootDir deve ser suficiente aqui
    "paths": { // Opcional: para importações mais limpas se necessário, mas tentaremos sem primeiro
      "@db/*": ["server/database/*"]
    }
  },
  "include": [
    "netlify/functions/**/*.ts", // Arquivos das funções
    "server/database/**/*.ts"    // Arquivos do banco de dados
  ],
  "exclude": [
    "node_modules",
    "dist",                     // Exclui o diretório dist principal
    "client",
    "server/*",               // Exclui outros arquivos em server/
    "!server/database",         // Mas garante que server/database seja incluído (se "server/*" for muito genérico)
    "netlify/functions-dist"    // Exclui o próprio diretório de saída
  ]
}
